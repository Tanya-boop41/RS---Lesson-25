<h2>Контакты</h2>

<form action="/contacts" method="POST">
<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Введите email</label>
  <input name="email" type="email" class="form-control" placeholder="введите ваш email" value="<%= @email %>">
</div>
<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Введите сообщение</label>
  <textarea name="text" class="form-control" rows="6" value="<%= @text %>" placeholder="введите ваше сообщение..." ></textarea>
</div>
<br/>
<div>
	<button type="submit" class="btn btn-primary">Отправить</button>
</div>
</form>